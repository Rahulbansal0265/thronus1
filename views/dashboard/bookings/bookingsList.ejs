<!-- Main Content -->
<section class="section">
  <div class="section-header">
    <h1>Appointments List</h1>
  </div>
  <div class="row" id="tableID">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title">Appointments Table</h4>
          <!-- <a class="btn btn-primary" href="/admin/addCategory">Add New</a> -->
        </div>
        <div class="table-responsive px-3">
          <table
            id="bookingsTable"
            class="table table-striped table-bordered"
            style="width: 100%"
          >
            <thead>
              <tr>
                <th>S.No</th>
                <th>Patient Name</th>
                <th>Doctor Name</th>
                <th>Date/Time</th>
                <th>Status</th>
                <th>Method</th>
              </tr>
            </thead>
            <tbody>
              <% bookingInfo.forEach((data, i)=>{%>
              <tr>
                <td><%= i+1%></td>
              <td><%= data.patient_detail.name%></td>
              <td><%= data.doctor_detail.name%></td>
              <td>
                <%= moment(data.appointmentTime).format("YYYY-MM-DD HH:mm:ss")
                %>
              </td>
              <td>
                  <div class="form-group">
                    <select
                      name="status"
                      onchange="bookingStatus('<%= data.id %>',this)"
                      class="form-control"
                      
                    >
                      <option value="0" <%= data.status == 0? "selected":"" %>>Reject</option>
                      <option value="1" <%= data.status == 1? "selected":"" %> >Pending</option>
                      <option value="2" <%= data.status == 2? "selected":"" %> >Approve</option>
                    </select>
                  </div>
                </td>
                <td>
                <div class="dropdown show">
                  <a
                    class="btn btn-primary dropdown-toggle"
                    href="#"
                    role="button"
                    id="dropdownMenuLink"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                  >
                    Actions
                  </a>

                  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a
                      class="dropdown-item deleteBooking"
                      onclick="deleteBooking('<%= data.id %>')"
                    >
                      Delete
                    </a>
                    <a
                       class="btn dropdown-item"
                      href="/admin/editBooking/<%= data.id%>"
                      >Edit</a
                    >
                    <a class="dropdown-item" href="/admin/viewBooking/<%= data.id%>"
                      >View</a
                    >
                  </div>
                </div>
              </td>
              </tr>

              <%})%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- main content End -->
<script src="../assets/js/myScripts.js"></script>
<script>
  imgInp.onchange = (evt) => {
    const [file] = imgInp.files;
    if (file) {
      blah.src = URL.createObjectURL(file);
    }
  };
</script>
