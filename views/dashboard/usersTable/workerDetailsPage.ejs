<section class="section">
    <div class="section-header">
    <h1>Employee's Info</h1>
  </div>

  <div class="section-body">
    <div class="col-12 col-sm-5 col-lg-12">
      <div class="card">
        <div class="card-header"></div>
        <div class="card-body">
            <div class="row">
          <div class="col-md-4">
            <div class="profile-img">
              <img
                src="/images/userImg/<%= workerInfo.image%>"
                 height="225px" width="225"
              />
              <!-- <div class="file btn btn-lg btn-primary">
            Change Photo
            <input type="file" name="file" />
          </div> -->
            </div>
          </div>
          <div class="col-md-6">
            <div class="profile-head">
              <h5><%= workerInfo.name%> </h5>
              <!-- <h6>Web Developer and Designer</h6> -->
              <div>
                <div class="row">
                  <!-- <div class="col-md-6">
                <label>Verification</label>
              </div> -->
                  
                </div>
              </div>
          <ul class="nav nav-pills mt-5" id="myTab3" role="tablist">
            <li class="nav-item">
              <a
                class="nav-link active"
                id="home-tab3"
                data-toggle="tab"
                href="#home3"
                role="tab"
                aria-controls="home"
                aria-selected="false"
                >Employee's Info</a
              >
            </li>
            <!-- <li class="nav-item">
              <a
                class="nav-link"
                id="profile-tab3"
                data-toggle="tab"
                href="#profile3"
                role="tab"
                aria-controls="profile"
                aria-selected="false"
                >other</a
              >
            </li> -->
            
          </ul>
          <div class="tab-content" id="myTabContent2">
            <div
              class="tab-pane fade active show"
              id="home3"
              role="tabpanel"
              aria-labelledby="home-tab3"
            >
              <div class="row">
                  <div class="col-md-6">
                    <label>Name</label>
                  </div>
                  <div class="col-md-6">
                    <p><%= workerInfo.name%></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <label>Email</label>
                  </div>
                  <div class="col-md-6">
                    <p><%= workerInfo.email%></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <label>Phone</label>
                  </div>
                  <div class="col-md-6">
                    <p><%= workerInfo.mobile%></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <label>Profession</label>
                  </div>
                  <div class="col-md-6">
                    <%if(workerInfo.type == "3"){%>
                    <p>Doctor</p>
                    <%}else if(workerInfo.type == "2"){%>
                    <p>Worker</p>
                    <% }else if(workerInfo.type == "1"){%>
                    <p>Petient</p>
                    <%}%>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <label>Status</label>
                  </div>
                  <div class="col-md-6">
                        <% if(workerInfo.status=="1" ){%>
                          <div class="badge badge-success">Active</div>

                          <%}else{%>
                            <div class="badge badge-danger">Blocked</div>
                            <%}%>
                      </div>
                    </div>
                    <div>
                      <div class="row">
                        <div class="col-md-6">
                          <label>Verification</label>
                        </div>
                        <div class="col-md-6">
                          <% if(workerInfo.isVerify=="0" ){%>
                            <div class="badge badge-danger">Disapproved</div>
                            <%}else if(workerInfo.isVerify=="1" ){%>
                              <div class="badge badge-warning">Pending</div>
                              <%}else {%>
                                <div class="badge badge-success">Approved</div>

                                <%}%>
                        </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <label>Gender</label>
                  </div>
                  <div class="col-md-6">
                    <% if(workerInfo.gender=="0"){%>
                    <p>Male</p>
                    <%}else if(workerInfo.gender=="1"){%>
                    <p>Female</p>
                    <%}else {%>
                    <p>Other</p>
                    <%}%>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <label>Date of Birth</label>
                  </div>
                  <div class="col-md-6">
                    <p><%= moment(workerInfo.birth_date).format("YYYY-MM-DD")%></p>
                  </div>
                </div>
            </div>
            <div
              class="tab-pane fade"
              id="profile3"
              role="tabpanel"
              aria-labelledby="profile-tab3"
            >
             
                <div class="row">
                  <div class="col-md-6">
                    <label>Experience</label>
                  </div>
                  <div class="col-md-6">
                    <p>Expert</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <label>Hourly Rate</label>
                  </div>
                  <div class="col-md-6">
                    <p>10$/hr</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <label>Total Projects</label>
                  </div>
                  <div class="col-md-6">
                    <p>230</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <label>English Level</label>
                  </div>
                  <div class="col-md-6">
                    <p>Expert</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <label>Availability</label>
                  </div>
                  <div class="col-md-6">
                    <p>6 months</p>
                  </div>
                </div>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
