      .ExternalClass {
        width: 100%;
      }
      * {
        -webkit-text-size-adjust: none;
        -webkit-text-resize: 100%;
        text-resize: 100%;
      }
      @media only screen and (max-width: 450px) {
        table[class="flexible"] {
          width: 100% !important;
        }
        td[class="img"] img {
          width: 100% !important;
          height: auto !important;
        }
        td[class="bottom"] {
          padding: 0 0 15px;
        }
        td[class="center"] {
          padding: 0 45px 15px 0;
        }
        td[class="title"] {
          font-size: 26px !important;
          line-height: 30px !important;
        }
        td[class="footer"] {
