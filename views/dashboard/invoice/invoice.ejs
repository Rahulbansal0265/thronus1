  <body style="margin: 0; padding: 0" bgcolor="">
    <style type="text/css">
      * {
        -webkit-text-size-adjust: none;
        -webkit-text-resize: 100%;
        text-resize: 100%;
        font-family: "Poppins", sans-serif;
      }
    </style>

    <section class="section">
      <div class="section-header">
        <h1>Invoice</h1>
      </div>
    </section>
    <table
      class="tble_show"
      width=""
      cellspacing="0"
      cellpadding="0"
      bgcolor=""
    >
      <tr>
        <td style="padding: 20px 10px 0px 11px" bgcolor="#ffffff">
          <table
            class="flexible"
            width="620"
            align="center"
            style="margin: 0 auto !important"
            cellpadding="0"
            cellspacing="0"
          >
            <tr>
              <div class="text-center">
                <img
                  src="/assets/img/maddison.png"
                  alt="logo"
                  width="200"
                  class="ml-2 mb-2 mt-2"
                />
              </div>
              <!-- <p class="red" align="center"><b>Maddison Health Care</b></p> -->
              <td
                class="title"
                align="left"
                style="font:28px/30px Arial,vertical-align: top; Helvetica, sans-serif; color:#455a64; padding-bottom:14px;"
              >
                <p><b style="font-size: 20px">INVOICE </b></p>

                <p class="red"><b><%= invoiceInfo.patient_detail.name%></b></p>
                <p class="locatoon">
                  <i class="fa fa-map-marker"></i> <%=
                  invoiceInfo.patient_detail.address%>
                </p>
                <p class="locatoon" style="visibility: hidden">
                  <i class="fa fa-map-marker"></i>
                </p>
              </td>
              <td
                class="title"
                align="center"
                style="
                  vertical-align: top;
                  font: 28px/30px Arial, Helvetica, sans-serif;
                  color: #9ebec7;
                  padding-bottom: 14px;
                "
              >
                <img
                  style=""
                  src="http://202.164.42.227/Inkasisa/public/assets/images/logo-text.png"
                  align="middle"
                  vspace="0"
                  hspace="0"
                  width=""
                  height=""
                  alt=""
                />
              </td>
              <td
                class="title"
                align="right"
                style="font:28px/30px Arial,vertical-align: top; Helvetica, sans-serif; color:#455a64; padding-bottom:14px;"
              >
                <p>
                  <b style="font-size: 20px">#<%= invoiceInfo.invoiceId%></b>
                </p>
                <p class="red">
                  Dr. <span> </span>
                  <b><%= invoiceInfo.doctor_detail.name%> </b>
                </p>
                <p class="locatoon">
                  <b>Invoice Date :</b> <i class="fa fa-calendar"></i> <%=
                  moment(invoiceInfo.appointmentTime).format("DD-MM-YYYY") %>
                </p>
                <p class="locatoon">
                  <b>Due Date :</b> <i class="fa fa-calendar"></i> <%=
                  moment(dueDate).format("DD-MM-YYYY") %>
                </p>
              </td>
            </tr>
          </table>
          <table
            class="flexible table_top"
            width="620"
            align="center"
            style="margin: 10px auto 20px !important"
            cellpadding="0"
            cellspacing="0"
          >
            <thead class="thead_bar">
              <tr>
                <th colspan="3"><p>Discription</p></th>
              </tr>
            </thead>
            <tbody class="tbody_bar">
              <tr>
                <td id="discription"><%- invoiceInfo.doctorNote %></td>
              </tr>
            </tbody>
          </table>

          <table
            class="flexible"
            width="620"
            align="center"
            style="margin: 0 auto !important"
            cellpadding="0"
            cellspacing="0"
          >
            <tr>
              <td
                class="title"
                align="left"
                style="font:28px/30px Arial,vertical-align: top; Helvetica, sans-serif; color:#455a64; padding-bottom:14px;"
              ></td>
              <td
                class="title"
                align="center"
                style="
                  font: 28px/30px Arial, Helvetica, sans-serif;
                  color: #9ebec7;
                  padding-bottom: 14px;
                "
              ></td>
              <td
                class="title"
                align="right"
                style="font:28px/30px Arial,vertical-align: top; Helvetica, sans-serif; color:#455a64; padding-bottom:14px;"
              >
                <p class="locatoon">
                  Sub - Total amount: $<%= invoiceInfo.ammount.toFixed(2)%>
                </p>
                <p
                  class="locatoon"
                  style="border-bottom: 1px solid #ddd; padding-bottom: 12px"
                >
                  vat (2%) : $<%= vat.toFixed(2)%>
                </p>
                <p
                  class="locatoon"
                  style="
                    font-size: 30px;
                    margin-top: 0px;
                    color: #455a64 !important;
                  "
                >
                  <b style="font-size: 30px">Total : $<%= total.toFixed(2)%></b>
                </p>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
