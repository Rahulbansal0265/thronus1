        color: #333;
        text-transform: uppercase;
        font-size: 19px;
        margin: 9px 0px;
        font-weight: bold;
      }
      .thead_bar tr {
        background: #6593c3;
        padding: 10px;
      }
      .tbody_bar tr td {
        height: 35px;
        text-align: center;
        border: 1px solid #ddd;
        color: #666;
        font-size: 13px;
        letter-spacing: 2px;
      }
      .red {
        color: #ef5350;
        text-transform: uppercase;
        font-size: 26px;
      }
      .locatoon {
        color: #99abb4;
        text-transform: capitalize;
      }
      .locatoon b {
        font-size: 12px;
